<Window x:Class="wpf_5.MainWindow"
        
    
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Logic Tasks App" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="TaskComboBox" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="200" SelectionChanged="TaskComboBox_SelectionChanged"/>
        <TextBox x:Name="ResultTextBox" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Width="400" Height="300" IsReadOnly="True" TextWrapping="Wrap"/>
    </Grid>
</Window>
        